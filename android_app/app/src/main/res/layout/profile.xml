<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Top section with background and profile -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:contentDescription="Profile background"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/top_profile_background" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/avatar_card"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="150dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="75dp"
                    app:cardElevation="4dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:id="@+id/avatar_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:contentDescription="User Avatar"
                        android:padding="4dp"
                        app:srcCompat="@drawable/profile_avatar" />

                </androidx.cardview.widget.CardView>

                <!-- Edit Avatar Button -->
                <ImageView
                    android:id="@+id/edit_avatar_btn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:clickable="true"
                    android:contentDescription="Edit Avatar"
                    android:src="@drawable/ic_edit"
                    app:layout_constraintBottom_toBottomOf="@+id/avatar_card"
                    app:layout_constraintEnd_toEndOf="@+id/avatar_card" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quang Nho"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#333"
                    app:layout_constraintTop_toBottomOf="@id/avatar_card"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123@gmail.com"
                    android:textSize="16sp"
                    android:textColor="#666"
                    app:layout_constraintTop_toBottomOf="@id/username"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="4dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- User Info Cards -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_home" />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:text="123 Street, ABC city"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#333" />

                    <EditText
                        android:id="@+id/address_edit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:text="123 Street, ABC city"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#333" />

                    <ImageView
                        android:id="@+id/edit_address_btn"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:clickable="true"
                        app:srcCompat="@drawable/ic_edit" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_calendar" />

                    <TextView
                        android:id="@+id/birthday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:text="01 Jan 1990"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#333" />

                    <EditText
                        android:id="@+id/birthday_edit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:text="01 Jan 1990"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#333" />

                    <ImageView
                        android:id="@+id/edit_birthday_btn"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:clickable="true"
                        app:srcCompat="@drawable/ic_edit" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        app:srcCompat="@drawable/ic_person" />

                    <TextView
                        android:id="@+id/gender"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:text="Male"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#333" />

                    <EditText
                        android:id="@+id/gender_edit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:text="Male"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#333" />

                    <ImageView
                        android:id="@+id/edit_gender_btn"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:clickable="true"
                        app:srcCompat="@drawable/ic_edit" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        app:srcCompat="@drawable/ic_password" />

                    <TextView
                        android:id="@+id/password"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:text="********"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#333" />

                    <EditText
                        android:id="@+id/password_edit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:text="********"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#333" />

                    <ImageView
                        android:id="@+id/view_hide_btn"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="10dp"
                        android:clickable="true"
                        app:srcCompat="@drawable/ic_hide" />

                    <ImageView
                        android:id="@+id/edit_password_btn"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:clickable="true"
                        app:srcCompat="@drawable/ic_edit" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <include layout="@layout/navigation_bar" />
</androidx.constraintlayout.widget.ConstraintLayout>
